<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteToChallenge"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateChallenge"
        android:orientation="vertical"

        android:background="#d2b8a3"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:baselineAligned="false"
            android:layout_toStartOf="@+id/timeoutLayout"
            android:layout_toLeftOf="@+id/timeoutLayout"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creator_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:paddingLeft="3dp"
                    android:text="binnet94"
                    android:textAlignment="viewStart" />

                <ImageView
                    android:id="@+id/creator_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/cowboy_pic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inviteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/challenger_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:paddingRight="3dp"
                    android:text="mesud_abdullayev"
                    android:textAlignment="viewEnd" />

                <ImageView
                    android:id="@+id/challenger_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:onClick="addChallengeInvitationItem"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/plus" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/inviteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invite to Challenge" />

    </LinearLayout>

</LinearLayout>